// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "problemMatchers": [
    {
      "name": "esbuild",
      "label": "esbuild problem matcher",
      "severity": "error",
      "applyTo": "closedDocuments",
      "source": "esbuild",
      "fileLocation": "relative",
      "owner": "typescript",
      "pattern": [
        {
          "regexp": "> (.*?):([0-9]+):([0-9]+): (warning|error): (.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      ]
    },
    {
      "name": "esbuild-watch",
      "base": "$esbuild",
      "label": "esbuild --watch problem matcher",
      "severity": "error",
      "applyTo": "closedDocuments",
      "source": "esbuild",
      "owner": "typescript",
      "fileLocation": "relative",
      "background": {
        "activeOnStart": true,
        "beginsPattern": {
          "regexp": "\\[watch\\] build started"
        },
        "endsPattern": {
          "regexp": "\\[watch\\] build finished, watching for changes..."
        }
      }
    }
  ],
  "tasks": [
    {
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "option": "watch",
      "problemMatcher": ["$tsc-watch"],
      "group": "build",
      "label": "tsc: 监视 - tsconfig.json"
    },
    {
      "type": "npm",
      "script": "dev",
      "problemMatcher": ["$esbuild-watch"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "npm: dev",
      "detail": "esbuild ./src/main.ts --outfile=out/extension.js --external:vscode --format=cjs --platform=node --bundle --watch"
    },
    {
      "type": "npm",
      "script": "vscode:test",
      "problemMatcher": [],
      "label": "npm: vscode:test",
      "detail": "node ./out/test/runTest.js"
    }
  ]
}
