{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "applyTo": "allDocuments",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "owner": "rollup",
          "source": "rollup-watch",
          "severity": "error",
          "pattern": {
            "regexp": "^\\[!\\](?: \\(plugin [^)]+\\))? RollupError: (\\S+) \\((\\d+):(\\d+)\\): (.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "message": 4
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^bundles (.*) â†’ (.*)\\.{3}$",
            "endsPattern": "^\\[\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}\\] waiting for changes\\.{3}"
          }
        }
      ],
      "label": "npm: watch",
      "detail": "rollup -c -w"
    }
  ]
}
