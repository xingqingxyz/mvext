// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"isBackground": true,
			"problemMatcher": {
				"owner": "typescript",
				"fileLocation": "relative",
				"background": {
					"activeOnStart": true,
					"beginsPattern": {
						"regexp": "^\\[watch\\] build started"
					},
					"endsPattern": {
						"regexp": "^\\[watch\\] build finished"
					}
				},
				"pattern": {
					"regexp": "^\\[watch\\] build started \\(change: \"(.*?)\"\\)$",
					"file": 1,
					"location": 2,
					"severity": 3,
					"code": 4,
					"message": 5
				}
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"type": "npm",
			"script": "dev",
			"label": "npm: dev",
			"detail": "pnpm esbuild --sourcemap --watch"
		}
	]
}
