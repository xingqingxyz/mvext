// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "option": "watch",
      "problemMatcher": ["$tsc-watch"],
      "group": "build",
      "label": "tsc: 监视 - tsconfig.json"
    },
    {
      "type": "npm",
      "script": "dev",
      "problemMatcher": {
        "applyTo": "closedDocuments",
        "pattern": [
          {
            "regexp": "^([^\\\\s].*)\\\\((\\\\d+,\\\\d+)\\\\):\\\\s*(.*)$",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "\\[watch\\] build started"
          },
          "endsPattern": {
            "regexp": "\\[watch\\] build finished, watching for changes..."
          }
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "npm: dev",
      "detail": "esbuild ./src/main.ts --outfile=out/extension.js --external:vscode --format=cjs --platform=node --bundle --watch"
    },
    {
      "type": "npm",
      "script": "vscode:test",
      "problemMatcher": [],
      "label": "npm: vscode:test",
      "detail": "node ./out/test/runTest.js"
    }
  ]
}
