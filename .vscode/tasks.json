{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "applyTo": "allDocuments",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^([^\\\\s].*)\\\\((\\\\d+,\\\\d+)\\\\):\\\\s*(.*)$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "^bundles (.*) â†’ (.*)\\.{3}$",
            "file": 0
          },
          "endsPattern": {
            "regexp": "^\\[\\d{4}\\-\\d\\d\\-\\d\\d \\d\\d:\\d\\d:\\d\\d\\] waiting for changes\\.{3}"
          }
        }
      },
      "label": "npm: watch",
      "detail": "NODE_ENV=development rollup -c --watch"
    }
  ]
}
