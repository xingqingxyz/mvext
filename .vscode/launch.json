{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--disable-extensions",
        "--enable-proposed-api",
        "xingqingxyz.mvext",
        "${workspaceFolder}/fixtures"
      ],
      "preLaunchTask": "${defaultBuildTask}"
    },
    {
      "name": "Extension Tests",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/dist/test/suite",
        "--disable-extensions",
        "--enable-proposed-api",
        "xingqingxyz.mvext",
        "${workspaceFolder}/fixtures"
      ]
    },
    {
      "name": "Run Web Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionDevelopmentKind=web",
        "--disable-extensions",
        "--enable-proposed-api",
        "xingqingxyz.mvext",
        "${workspaceFolder}/fixtures"
      ],
      "preLaunchTask": "npm: watch-web"
    },
    {
      "name": "Web Extension Tests",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/dist/test/suite",
        "--extensionDevelopmentKind=web",
        "--disable-extensions",
        "--enable-proposed-api",
        "xingqingxyz.mvext",
        "${workspaceFolder}/fixtures"
      ]
    },
    {
      "name": ".NET Core Launch (console)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "dotnet: build",
      "program": "${workspaceFolder}/VisitAst/bin/Debug/net9.0/VisitAst.dll",
      "args": ["./test.ps1", "./test.json"],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "console": "internalConsole"
    }
  ]
}
