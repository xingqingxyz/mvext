// cSpell:words camelcase,pascalcase
{
  "VSC Snippets Placeholder": {
    "prefix": "_",
    "body": "\\${${1:0}:${2:$TM_SELECTED_TEXT}}",
    "description": "VSC Snippets Placeholder"
  },
  "VSC Snippets Choose Items": {
    "prefix": "_i",
    "body": "\\${${1:0}|${2:$TM_SELECTED_TEXT}|}",
    "description": "VSC Snippets Choose Items"
  },
  "VSC Snippets Case Transform": {
    "prefix": "_c",
    "body": "\\${${1:1}/.+/\\${0:${2|/capitalize,/upcase,/downcase,/camelcase,/pascalcase|}}/}",
    "description": "VSC Snippets case transform"
  },
  "VSC Snippets Variables": {
    "prefix": "_v",
    "body": "\\$${0:${1|TM_SELECTED_TEXT,TM_CURRENT_LINE,TM_CURRENT_WORD,TM_LINE_INDEX,TM_LINE_NUMBER,TM_FILENAME,TM_FILENAME_BASE,TM_DIRECTORY,TM_FILEPATH,RELATIVE_FILEPATH,CLIPBOARD,WORKSPACE_NAME,WORKSPACE_FOLDER,CURSOR_INDEX,CURSOR_NUMBER,CURRENT_YEAR,CURRENT_YEAR_SHORT,CURRENT_MONTH,CURRENT_MONTH_NAME,CURRENT_MONTH_NAME_SHORT,CURRENT_DATE,CURRENT_DAY_NAME,CURRENT_DAY_NAME_SHORT,CURRENT_HOUR,CURRENT_MINUTE,CURRENT_SECOND,CURRENT_SECONDS_UNIX,BLOCK_COMMENT_START,BLOCK_COMMENT_END,LINE_COMMENT,RANDOM,RANDOM_HEX,UUID|}}",
    "description": "VSC Snippets Variables"
  }
}
