{
  "include": ["src"],
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["ES2019"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
