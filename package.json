{
  "activationEvents": [
    "onStartupFinished"
  ],
  "author": "Ming Chen",
  "bugs": {
    "url": "https://github.com/xingqingxyz/vincode/issues"
  },
  "categories": [
    "Keymaps"
  ],
  "contributes": {
    "commands": [
      {
        "command": "vincode.toggleVimMode",
        "title": "Toggle Vim Mode"
      }
    ],
    "keybindings": [
      {
        "command": "vincode.toggleVimMode",
        "key": "ctrl+shift+space"
      }
    ]
  },
  "description": "Bring benefits from Vim to VSCode.",
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "~22.15.32",
    "@types/vscode": "^1.101.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.5",
    "eslint": "^9.29.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3",
    "simple-git-hooks": "^2.13.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1"
  },
  "displayName": "Morden Vim in VSCode",
  "engines": {
    "vscode": "^1.101.0"
  },
  "license": "MIT",
  "lint-staged": {
    "*.{js,ts,json,md}": "prettier -w",
    "*.{js,ts}": "eslint --fix"
  },
  "main": "./dist/extension.js",
  "name": "vincode",
  "prettier": {
    "bracketSameLine": true,
    "semi": false,
    "singleQuote": true
  },
  "preview": true,
  "private": true,
  "publisher": "xingqingxyz",
  "repository": {
    "type": "git",
    "url": "https://github.com/xingqingxyz/vincode"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpx lint-staged"
  },
  "scripts": {
    "simple-mode": "esbuild --bundle --external:vscode --format=esm --outfile=dist/extension.js --platform=node --target=node22 src/simple-mode/index.ts --sourcemap --watch",
    "watch": "pnpm _esbuild --sourcemap --watch",
    "lint": "eslint --fix src",
    "test": "vscode-test",
    "pretest": "pnpm _esbuild --format=cjs --outfile=out/extension.js && pnpm build:test && node -e \"var obj = require('./package.json'); delete obj.type; obj.main = 'extension.js'; fs.writeFileSync('out/package.json', JSON.stringify(obj), 'utf8')\"",
    "vscode:prepublish": "pnpm _esbuild --minify",
    "build:test": "esbuild --format=cjs --outdir=out/test --platform=node --target=node22 src/test/**/*.ts",
    "_esbuild": "esbuild --bundle --external:vscode --format=esm --outfile=dist/extension.js --platform=node --target=node22 src/extension.ts"
  },
  "version": "0.0.1",
  "type": "module",
  "dependencies": {
    "rxjs": "^7.8.2"
  }
}
