{
  "activationEvents": [
    "onStartupFinished"
  ],
  "author": "Ming Chen",
  "bugs": {
    "url": "https://github.com/xingqingxyz/mvext/issues"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "contributes": {
    "commands": [
      {
        "category": "mvext",
        "command": "mvext.transformCaseDefault",
        "title": "Transform Case (default)"
      },
      {
        "category": "mvext",
        "command": "mvext.transformCaseWithPicker",
        "title": "Transform Case with Picker"
      },
      {
        "category": "mvext",
        "command": "mvext.renameWithCase",
        "title": "Rename with Case"
      },
      {
        "category": "mvext",
        "command": "mvext.applyShellEdit",
        "title": "Apply Shell Edit"
      },
      {
        "category": "mvext",
        "command": "mvext.applyTerminalEdit",
        "icon": "$(edit)",
        "title": "Apply Terminal Edit"
      },
      {
        "category": "mvext",
        "command": "mvext.applyTerminalFilter",
        "title": "Apply Terminal Filter"
      },
      {
        "category": "mvext",
        "command": "mvext.applyTerminalRun",
        "icon": "$(play)",
        "title": "Apply Terminal Run"
      },
      {
        "category": "mvext",
        "command": "mvext.hexColor.toggleLanguage",
        "title": "Toggle Hex Color Language"
      },
      {
        "category": "mvext",
        "command": "mvext.runCodeBlock",
        "title": "Run Markdown Code Block"
      },
      {
        "category": "mvext",
        "command": "mvext._copyCodeBlock",
        "title": "Copy Markdown Code Block"
      }
    ],
    "configuration": {
      "properties": {
        "mvext.dictionaryCompleteEnabled": {
          "default": true,
          "markdownDescription": "Enable dictionary completion",
          "scope": "resource",
          "type": "boolean"
        },
        "mvext.pathComplete.debounceTimeMs": {
          "default": 200,
          "markdownDescription": "Path completion debounceTimeMs",
          "scope": "resource",
          "type": "integer"
        },
        "mvext.pathComplete.prefixMap": {
          "additionalProperties": {
            "type": "string"
          },
          "default": {},
          "examples": {
            "@": "${workspaceFolder}/src"
          },
          "markdownDescription": "Path mappings for path completion:\n- `${workspaceFolder}` means workspace folder\n- `~` means `os.homedir()`\n- use $VAR to substitute to environment variables",
          "scope": "resource",
          "type": "object"
        },
        "mvext.shellEdit.node.cmd": {
          "default": [
            "node",
            "-e"
          ],
          "examples": [
            [
              "bun",
              "-e"
            ]
          ],
          "items": {
            "type": "string"
          },
          "markdownDescription": "Child process command and args when eval javascript/typescript files",
          "scope": "resource",
          "type": "array"
        },
        "mvext.shellEdit.powershell.cmd": {
          "default": [
            "pwsh",
            "-NoProfile",
            "-Command"
          ],
          "examples": [
            [
              "powershell",
              "-NoProfile",
              "-Command"
            ]
          ],
          "items": {
            "type": "string"
          },
          "markdownDescription": "Child process command and args when eval powershell files",
          "scope": "resource",
          "type": "array"
        },
        "mvext.shellEdit.python.cmd": {
          "default": [
            "python",
            "-c"
          ],
          "examples": [
            [
              "uv",
              "run",
              "python",
              "-c"
            ]
          ],
          "items": {
            "type": "string"
          },
          "markdownDescription": "Child process command and args when eval python files",
          "scope": "resource",
          "type": "array"
        },
        "mvext.shellEdit.shellscript.cmd": {
          "default": [
            "bash",
            "-c"
          ],
          "examples": [
            [
              "wsl",
              "-e",
              "bash",
              "-c"
            ],
            [
              "C:\\Program Files\\Git\\usr\\bin\\bash.exe",
              "-c"
            ]
          ],
          "items": {
            "type": "string"
          },
          "markdownDescription": "Child process command and args when eval shellscript files",
          "scope": "resource",
          "type": "array"
        },
        "mvext.shfmt.extraArgs": {
          "default": [
            "-bn",
            "-ci",
            "-sr"
          ],
          "items": {
            "type": "string"
          },
          "markdownDescription": "Formatter shfmt's extra command line args",
          "type": "array"
        },
        "mvext.stylua.extraArgs": {
          "default": [],
          "items": {
            "type": "string"
          },
          "markdownDescription": "Formatter stylua's extra command line args",
          "type": "array"
        },
        "mvext.transformCase.defaultCase": {
          "default": "camel",
          "enum": [
            "camel",
            "constant",
            "dot",
            "header",
            "kebab",
            "lower",
            "normal",
            "pascal",
            "path",
            "sentence",
            "snake",
            "title",
            "upper"
          ],
          "markdownDescription": "Command `mvext.transformCaseDefault` use this as transform to target case",
          "scope": "language-overridable",
          "type": "string"
        },
        "mvext.runCodeBlock.timeoutMs": {
          "type": "integer",
          "default": 30000,
          "markdownDescription": "Command `mvext.runCodeBlock` use this when command timeout."
        }
      },
      "title": "mvext"
    },
    "keybindings": [
      {
        "command": "mvext.transformCaseDefault",
        "key": "alt+x alt+x",
        "when": "editorTextFocus && !editorReadonly"
      },
      {
        "command": "mvext.transformCaseWithPicker",
        "key": "alt+x t",
        "when": "editorTextFocus && !editorReadonly"
      },
      {
        "command": "mvext.renameWithCase",
        "key": "alt+x r",
        "when": "editorTextFocus && !editorReadonly"
      },
      {
        "command": "mvext.applyShellEdit",
        "key": "ctrl+alt+e",
        "when": "editorTextFocus && !editorReadonly"
      },
      {
        "command": "mvext.applyTerminalEdit",
        "key": "alt+e",
        "when": "editorTextFocus && !editorReadonly"
      },
      {
        "command": "mvext.applyTerminalFilter",
        "key": "alt+t",
        "when": "editorTextFocus && !editorReadonly"
      },
      {
        "command": "mvext.applyTerminalRun",
        "key": "f8",
        "when": "editorTextFocus && editorLangId != 'powershell'"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "alt": "mvext.applyTerminalEdit",
          "command": "mvext.applyTerminalRun",
          "group": "navigation",
          "when": "editorTextFocus && editorLangId != 'powershell'"
        }
      ]
    }
  },
  "description": "An extension ships some useful tools.",
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^16",
    "@rollup/plugin-replace": "^6.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "@swc-node/register": "^1.10.10",
    "@types/mocha": "^10.0.9",
    "@types/node": "^20.17.6",
    "@types/vscode": "^1.100.0",
    "@types/which": "^3.0.4",
    "@vscode/dts": "^0.4.1",
    "@vscode/vsce": "^3.5.0",
    "eslint": "^9.14.0",
    "glob": "^11.0.0",
    "lint-staged": "^16.0.0",
    "mocha": "^11",
    "prettier": "^3.3.3",
    "rollup": "^4.26.0",
    "simple-git-hooks": "^2.13.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.14.0"
  },
  "displayName": "My VSCode Extension",
  "engines": {
    "vscode": "^1.100.0"
  },
  "license": "MIT",
  "lint-staged": {
    "*.{js,ts,json,md}": "prettier -w",
    "*.{js,ts}": "eslint --fix"
  },
  "main": "./out/extension.js",
  "name": "mvext",
  "prettier": {
    "bracketSameLine": true,
    "semi": false,
    "singleQuote": true
  },
  "preview": true,
  "private": true,
  "publisher": "xingqingxyz",
  "repository": {
    "type": "git",
    "url": "https://github.com/xingqingxyz/mvext"
  },
  "scripts": {
    "lint": "eslint --fix src",
    "test": "mocha -r @swc-node/register --extension ts src/test/**/*.ts",
    "vscode:prepublish": "rollup -c --environment NODE_ENV:production",
    "prepare": "npx simple-git-hooks",
    "watch": "rollup -c -w"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "type": "module",
  "version": "0.14.0",
  "dependencies": {
    "strip-ansi": "^7.1.0",
    "which": "^5.0.0"
  }
}
