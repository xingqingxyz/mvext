{
  "author": "Ming Chen <cm.email@qq.com> (https://github.com/xingqingxyz)",
  "bugs": {
    "url": "https://github.com/xingqingxyz/toml/issues"
  },
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    },
    "virtualWorkspaces": true
  },
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "contributes": {
    "commands": [
      {
        "category": "TOML",
        "command": "toml.selectSchema",
        "enablement": "editorLangId == toml",
        "title": "Select Schema"
      },
      {
        "category": "TOML",
        "command": "toml.copyAsJson",
        "enablement": "editorHasSelection",
        "title": "Copy as JSON"
      },
      {
        "category": "TOML",
        "command": "toml.copyAsToml",
        "enablement": "editorHasSelection",
        "title": "Copy as TOML"
      },
      {
        "category": "TOML",
        "command": "toml.pasteAsJson",
        "title": "Paste as JSON"
      },
      {
        "category": "TOML",
        "command": "toml.pasteAsToml",
        "title": "Paste as TOML"
      }
    ],
    "configuration": {
      "properties": {
        "toml.taplo.extraArgs": {
          "default": [],
          "description": "Additional arguments for Taplo.",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "toml.taplo.path": {
          "default": "taplo",
          "description": "An absolute path to the `taplo` executable.",
          "type": "string"
        }
      },
      "title": "TOML"
    },
    "grammars": [
      {
        "language": "toml",
        "path": "./syntax/toml.tmLanguage.json",
        "scopeName": "source.toml"
      },
      {
        "injectTo": [
          "text.html.markdown"
        ],
        "path": "./syntax/toml.frontmatter.tmLanguage.json",
        "scopeName": "markdown.toml.frontmatter.codeblock"
      },
      {
        "embeddedLanguages": {
          "meta.embedded.block.toml": "toml"
        },
        "injectTo": [
          "text.html.markdown"
        ],
        "path": "./syntax/toml.markdown.tmLanguage.json",
        "scopeName": "markdown.toml.codeblock"
      }
    ],
    "languages": [
      {
        "aliases": [
          "TOML"
        ],
        "configuration": "./language-configuration.json",
        "extensions": [
          ".toml"
        ],
        "filenames": [
          "Cargo.lock",
          "uv.lock"
        ],
        "id": "toml"
      }
    ],
    "semanticTokenScopes": [
      {
        "scopes": {
          "tomlArrayKey": [
            "support.type.property-name.array.toml"
          ],
          "tomlTableKey": [
            "support.type.property-name.table.toml"
          ]
        }
      }
    ],
    "semanticTokenTypes": [
      {
        "description": "Array keys.",
        "id": "tomlArrayKey",
        "superType": "variable"
      },
      {
        "description": "Inline table keys.",
        "id": "tomlTableKey",
        "superType": "variable"
      }
    ]
  },
  "description": "TOML language supports based on taplo.",
  "devDependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "displayName": "TOML",
  "engines": {
    "vscode": "^1.105.0"
  },
  "extensionKind": [
    "workspace"
  ],
  "license": "MIT",
  "main": "./dist/extension.js",
  "name": "toml",
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "private": true,
  "publisher": "xingqingxyz",
  "repository": {
    "type": "git",
    "url": "https://github.com/xingqingxyz/toml"
  },
  "scripts": {
    "extension:install": "vsce pack -o toml.vsix && code --install-extension toml.vsix",
    "lint": "tsc --noEmit && oxlint --fix src",
    "vscode:prepublish": "rollup -c --environment NODE_ENV:production,PLATFORM:all",
    "watch": "rollup -c -w",
    "watch-web": "rollup -c -w --environment PLATFORM:web"
  },
  "type": "module",
  "version": "0.2.0"
}
